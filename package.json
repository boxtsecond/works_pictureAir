{
  "name": "pictureAirAPI",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cd ./test && mocha"
  },
  "author": "",
  "license": "ISC",
  "config": {
    "days_interval" : 7,
    "max_size" : 5242880
  },
  "apps" : [{
    "name"        : "pictureAirAPI",
    "script"             : "./index.js",
    "watch"       : true,
    "ignore_watch":["node_modules","logs"],
    "env": {
      "NODE_ENV": "development"
    },
    "env_production" : {
      "NODE_ENV": "production"
    },
    "instances"  : 4,
    "exec_mode"  : "cluster",
    "merge_logs"         : true,
    "log_date_format":"YYYY-MM-DD HH:mm Z",
    "source_map_support": true,
    "max_memory_restart" : "200M"
  }],
  "dependencies": {
    "apns": "^0.1.0",
    "async": "^2.1.2",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "consolidate": "^0.14.4",
    "cookie-parser": "^1.4.3",
    "debug": "^2.3.2",
    "errorhandler": "^1.5.0",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "fs-extra": "^1.0.0",
    "image-size": "^0.5.0",
    "ioredis": "^2.4.0",
    "jsonwebtoken": "^7.1.9",
    "lodash": "^4.17.2",
    "log4js": "^1.0.1",
    "method-override": "^2.3.6",
    "mongoose": "^4.4.12",
    "morgan": "^1.7.0",
    "multer": "^1.2.0",
    "nodemailer": "^2.6.4",
    "request": "^2.78.0",
    "uuid": "^3.0.0"
  },
  "devDependencies": {
    "mocha": "^3.1.2",
    "should": "^11.1.1",
    "supertest": "^2.0.1"
  }
}
